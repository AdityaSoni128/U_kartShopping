<link rel="stylesheet" href="../../addProduct.css">
<div class="main">
    <h1>Update Product Page </h1>
    <div class="containor">
        <form  method="post" action="/admin/updateItem" enctype="multipart/form-data">
            <div class="inputTags">
                <div class="label"><label for="ProductName"> Product Name: </label></div>
                <div class="label"> <input required value="<%=data.productname%>" name="name" value="" type="text" id="ProductName" placeholder="Enter Product Name"></div>
            </div>
            <div class="inputTags">
               <div class="label"> <label for="ProducDescription"> Product Description: </label> </div>
               <div class="label"> <input required value="<%=data.productdescription%>" name="description" type="text" id="ProducDescription" placeholder="Enter Product Description"></div>
            </div>
            <div class="inputTags">
                <div class="label">  <label for="ProductPrice"> Product Price: </label></div>
                <div class="input"> <input required value="<%=data.productprice%>" name="price" type="number" id="ProductPrice" placeholder="Enter Product Price"></div>
            </div>
            <div class="inputTags">
                <div class="label">   <label for="ProductQuantity"> Product Quantity: </label></div>
                <div class="input"><input required value="<%=data.stock%>" name="quantity" type="number" id="ProductQuantity" placeholder="Enter Product Quantity"></div>
            </div>
            
            <div class="inputTags">
                <div class="label">  <label for="ProductImage"> Product Image: </label></div>
                <div class="input"> <input name="image" type="file" id="ProductImage" placeholder="Enter Product Image"></div>
            </div>
            <input type="submit" id="addProduct" value="Update Product">
            </form>
    </div>
</div>